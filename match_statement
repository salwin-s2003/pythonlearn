# write a program to input digit[0-9] and print in word
digit=int(input("ENter a digit from 0-9:"))
match digit:
    case 0:
        print("Zero")
    case 1:
        print("One")
    case 2:
        print("Two")
    case 3:
        print("Three")
    case 4:
        print("Four")
    case 5:
        print("Five")
    case 6:
        print("Six")
    case 7:
        print("Seven")
    case 8:
        print("Eight")
    case 9:
        print("Nine")
    case _:
        print("Enter a digit from 0-9 only")


# write a program to calculate aear of a circle, rectangle and triangle using match case
shape = input("Enter the shape \n 1)circle \n 2)rectangle \n 3)triangle :")
match(shape):
    case 'circle' | '1':
        radius= float(input("Enter the radius of circle:"))
        area=3.14*radius*radius
        print(f"Area of circle is {area}")
    case 'rectangle' | '2':
        Length= float(input("Enter the length of rectangle:"))
        breadth= float(input("Enter the breadth of rectangle:"))
        area=length*breadth
        print(f"Area of rectangle is {area}")
    case 'triangle' | '3':
        breadth= float(input("Enter the breadth of triangle:"))
        height= float(input("Enter the height of triangle:"))
        area=0.5*breadth*height
        print(f"Area of triangle is {area}")
    case _:
        print("Only 3 shapes are allowed. please type trianlge, rectangle or circle or 1,2,3")


# write a program to check if a character is vowel or consonant
char=input("Enter a character:")
match char:
    case 'a' | 'e' | 'i' | 'o' | 'u' | 'A' | 'E' | 'I' | 'O' | 'U':
        print(f"{char} is a vowel")
    case _:
        print(f"{char} is a consonant")

#write a program to check if a word has vowel and print those vowels form the word
word=input("Enter a word:")
vowel=[]
for char in word:
    match char:
        case 'a' | 'e' | 'i' | 'o' | 'u' | 'A' | 'E' | 'I' | 'O' | 'U':
            print(f"{char} is a vowel")
            vowel.append(char)
        case _:
            pass
print(f"Vowels in the word {word} are {vowel}")